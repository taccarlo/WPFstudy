<Window x:Class="wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Border Padding="8">
    <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="8">
                <TextBlock Text="Cognome" Margin="8,0"></TextBlock>
            <ComboBox x:Name="cmbPeople" Width="120"></ComboBox>
            <Button Margin="8,0" Click="Button_Click">Button example</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="txtOutput" Margin="8,0"></TextBlock>
        </StackPanel>
    </StackPanel>
    </Border>
</Window>
